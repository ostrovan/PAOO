#ifndef FOOD_HPP
#define FOOD_HPP

#include <string>
#include <iostream>
using namespace std;

class Food {
private:
    string name;    // Numele alimentului
    int *calories;  // Folosim pointeri pentru a ilustra alocarea dinamică
    string type;    // Tipul alimentului (setat la crearea obiectului, nu modificabil ulterior)
    int weight;     // Greutatea alimentului în grame

    // Constructorul de copiere - explicit interzis
    Food(const Food& other) = delete;

    // Operatorul de copiere - explicit interzis
    Food& operator=(const Food& other) = delete;

    // Constructorul de mutare - explicit interzis
    Food(Food&& other) noexcept = delete;

    // Operatorul de mutare - explicit interzis
    Food& operator=(Food&& other) noexcept = delete;

public:
    // Constructor pentru inițializarea obiectului
    Food(const string& name, int calories, int weight, const string& type);

    // Destructor - eliberează memoria dinamică
    ~Food();

    // Funcție de afișare a detaliilor
    string toString() const;
};

#endif

